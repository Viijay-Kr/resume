---

<section class="my-3">
  <Title title="Work Experience" />
  <ul class="gap-1 px-1 list-disc">
    {
      jobs.map(
        (
          {
            title,
            roles,
            from,
            till,
            company,
            totalDuration,
            company_link,
            acheivements,
          },
          index
        ) => (
          <li class="py-1 border-b border-slate-300 dark:border-amber-200">
            <section class="grid md:grid-cols-2">
              <section class="flex flex-col">
                <div class="flex flex-col lg:flex-row lg:items-center gap-0.5">
                  <h2 class="text-xl text-amber-700 font-semibold dark:text-light-blue">
                    üïµÔ∏è {title}
                  </h2>
                  <a
                    target="_blank"
                    href={company_link}
                    class="dark:text-blue-300 font-medium text-blue-800 cursor-pointer"
                  >
                    {t(company)}
                  </a>
                </div>
                <p class="dark:text-slate-400 text-sm text-slate-700">
                  Full Time . {from} to {till} . {totalDuration}
                </p>

                <section class="flex flex-col mr-3 lg:flex-row gap-1.5">
                  <div class="text-base my-1  dark:text-slate-300 font-normal flex flex-col gap-0.5">
                    {roles.map((role) => (
                      <p>
                        <Trans i18nKey={role}>
                          <span>.</span>
                        </Trans>
                      </p>
                    ))}
                  </div>
                </section>
              </section>
              <section class="text-lg  dark:text-slate-300 font-normal flex flex-col gap-0.5">
                <h3 class="text-xl font-bold text-amber-700 dark:text-light-blue">
                  Key Achievements üèÜ
                </h3>
                <ul class="p-1 shadow-md  rounded-md border dark:border-amber-800 dark:shadow-amber-500 list-disc">
                  {acheivements.map((acheivement) => (
                    <li class="text-base p-0.5 list-inside dark:text-amber-200 achievement font-medium">
                      <Trans i18nKey={acheivement}>
                        <span />
                      </Trans>
                    </li>
                  ))}
                </ul>
              </section>
            </section>
          </li>
        )
      )
    }
  </ul>
</section>
