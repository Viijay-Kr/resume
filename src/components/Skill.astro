---
interface Props {
  skill: string;
  minW: string; // tailwind class
  level: string; // tailwind class
}
const props = Astro.props;
---

<li class="flex flex-col gap-0.5 md:gap-1.5 md:flex-row md:items-center">
  <p class={`text-slate-800  ${props.minW}  dark:text-amber-50`}>
    {props.skill}
  </p>
  <div class="border-2 flex w-4 border-slate-800 dark:border-amber-400">
    <div
      class={`h-0.5 animate-skill-level-${props.level} bg-amber-700 dark:bg-amber-200`}
    >
    </div>
  </div>
</li>
