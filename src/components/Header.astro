---
import { t } from "i18next";
import { Youtube } from "../assets/svgs/Youtube";
import ReactIcon from "../assets/svgs/ic-react.svg";
import { GithubLight } from "../assets/svgs/GithubLight";
import profilePic from "../assets/images/im-avatar.png";
import linkedIn from "../assets/images/pn-linkedin.png";
import ToggleTheme from "../components/ToggleTheme";
---

<main class="container w-full text-black dark:text-amber-50 mx-auto py-2">
  <div class="flex flex-row gap-1 flex-1">
    <img src={profilePic} width="200" height="200" />
    <h2 class="font-extrabold text-5xl">
      <span class="">t("title_1")</span>
      <span class="text-amber-700 dark:text-amber-400">t("title_2") 👋🏼</span>
      <section class="flex flex-col gap-0.5 font-normal py-1 text-lg">
        <p>
          t("header.subtitle_1")
          <img
            class="inline-block"
            src={ReactIcon}
            width="30px"
            height="30px"
          /> t("header.subtitle_2") 🛠
        </p>
        <p>
          <span>Senior Software Engineer at</span>
          <a
            target="_blank"
            href="https://www.quantilope.com"
            class="dark:text-light-blue text-blue-800 font-semibold cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
          >
            Quantilope GmbH,📍 Hamburg, Germany
          </a>
        </p>
        <p class="py-1 flex flex-row gap-1 align-middle">
          <a
            target="_blank"
            href={"https://github.com/Viijay-Kr"}
            class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
            ><GithubLight className="fill-black dark:fill-amber-50 " />
          </a>
          <a
            href="https://www.linkedin.com/in/vijay-krishna-7a557291/"
            target="_blank"
            class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
          >
            <img height="30" width="30" src={linkedIn} />
          </a>
          <a
            href="https://youtube.com/channel/UCcSeQUrdrNObZqyqMD-913g"
            target="_blank"
            class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
          >
            <Youtube />
          </a>
        </p>
      </section>
    </h2>
    <ToggleTheme client:load />
  </div>
</main>
