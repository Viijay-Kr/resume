---
import { t } from "i18next";
import { Youtube } from "../assets/svgs/Youtube";
import ReactIcon from "../assets/svgs/ic-react.svg";
import { GithubLight } from "../assets/svgs/GithubLight";
import profilePic from "../assets/images/ic-pic.png";
import linkedIn from "../assets/images/pn-linkedin.png";
import ToggleTheme from "../components/ToggleTheme";
import { LanguageSelector } from "astro-i18next/components";
---

<div class="flex flex-row gap-1 flex-1">
  <img
    src={profilePic}
    class="aspect-square object-contain object-top"
    width="130"
    height="130"
  />
  <h2 class="font-extrabold flex-1 text-4xl">
    <span class="">{t("header.title_1")}</span>
    <span class="text-amber-700 dark:text-amber-400"
      >{t("header.title_2")} 👋🏼</span
    >
    <section
      class="flex flex-col gap-0.5 font-normal py-0.5 text-base leading-3"
    >
      <p>
        {t("header.subtitle_1")}
        <img class="inline-block" src={ReactIcon} width="30px" height="30px" />
        {t("header.subtitle_2")} 🛠
      </p>
      <p>
        <span>{t("header.job_title")}</span>
        <a
          target="_blank"
          href="https://www.quantilope.com"
          class="dark:text-light-blue text-blue-800 font-semibold cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
        >
          {t("header.company")}
        </a>
      </p>
      <section class="py-1 flex flex-row gap-1 align-middle">
        <a
          target="_blank"
          href={"https://github.com/Viijay-Kr"}
          class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
          ><GithubLight className="fill-black dark:fill-amber-50 " />
        </a>
        <a
          href="https://www.linkedin.com/in/vijay-krishna-7a557291/"
          target="_blank"
          class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
        >
          <img height="30" width="30" src={linkedIn} />
        </a>
        <a
          href="https://youtube.com/channel/UCcSeQUrdrNObZqyqMD-913g"
          target="_blank"
          class="cursor-pointer transition-transform ease-linear duration-200 hover:scale-125"
        >
          <Youtube />
        </a>
        <section
          class="flex text-base cursor-pointer flex-col gap-1 align-middle"
        >
          <a href="mailto: vijayakrishna.venkatesan@gmail.com"
            >✉️ vijayakrishna.venktesan@gmail.com</a
          >
          <a href="tel:+4917661332826">📞 +49 176 61332826</a>
        </section>
      </section>
    </section>
  </h2>
  <div class="flex flex-row align-middle justify-end gap-1">
    <LanguageSelector
      class="h-2.5 p-0.5 w-56 border-2 rounded-lg dark:bg-slate-800 outline-none border-amber-700 dark:border-amber-400 text-slate-800 dark:text-amber-400"
      showFlag={true}
    />
    <ToggleTheme client:load />
  </div>
</div>
