---
import { t } from "i18next";
import classNames from "classnames";
const { pathname } = Astro.url;
---

<nav class="flex sm:justify-start space-x-2">
  {
    [
      ["navbar.about_me", "/about"],
      ["navbar.projects", "/projects"],
      ["navbar.experience", "/experience"],
    ].map(([title, url]) => (
      <a
        href={url}
        class={classNames(
          "rounded-md p-0.5 text-slate-800 dark:text-amber-400 font-medium hover:bg-amber-700 dark:hover:bg-amber-50 dark:hover:text-slate-800 hover:text-slate-100",
          {
            "bg-amber-700 dark:bg-amber-50 dark:text-slate-800 text-slate-100":
              pathname.includes(url),
          }
        )}
      >
        {t(title)}
      </a>
    ))
  }
</nav>
