---
import i18next from "i18next";
import "../styles/index.css";
import Tracking from "../components/Tracking.astro";
import profilePic from "../assets/images/ic-avatar.png";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language} class={"subpixel-antialiased font-mono"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="title" title={title} />
    <meta
      name="description"
      content={`Enthusiastic Software Developer, passionate about User interfaces and
    User experiences with deep interest in programming and building software
    products that solves problems ðŸ¤“`}
    />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://www.vijayakrishna.dev" />
    <meta
      property="og:description"
      content={`Enthusiastic Software Developer, passionate about User interfaces and User experiences with deep interest in programming and building software products that solves problems ðŸ¤“`}
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Vijayakrishna NV" />
    <meta
      property="og:image"
      content={`https://www.vijayakrishna.dev/${profilePic}`}
    />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:site" content="https://www.vijayakrishna.dev" />
    <meta
      property="twitter:description"
      content={`Enthusiastic Software Developer, passionate about User interfaces and
    User experiences with deep interest in programming and building software
    products that solves problems ðŸ¤“`}
    />
    <meta
      property="twitter:image"
      content={`https://www.vijayakrishna.dev/${profilePic}`}
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500&family=Fira+Mono:wght@400;500;700&family=Space+Mono:wght@400;700&family=Fira+Sans&display=swap"
      rel="stylesheet"
    />
    <Tracking />
  </head>
  <body class="bg-amber-50 dark:bg-slate-800">
    <main
      class="text-black container dark:text-amber-50 p-1 md:mx-auto md:pt-2"
    >
      <slot />
    </main>
  </body>
</html>
